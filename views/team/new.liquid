{% layout 'layout.liquid' %}


{% block header %}
<h1>Create New Team</h1>
{% endblock %}
{% block navBar %}
<form>
    <input class="nav-btn" type="button" value="Back" onclick="history.go(-1)">
</form>
{% endblock %}

{% block content %}
<div class="container">
    <div class="container-teams">
                <div class="form-team">
                    <form action="/team" method="POST">
                        <p class="frm-team-img">Team Icon:
                            <input type="text" name="teamImg" value="{{editTeam.teamImg}}" placeholder="Team Icon">
                        </p>
                        <!-- maybe a color? -->
                        <br>
                        <br>
                        <h2>New Team</h2>
                        <div class="team-div">
                            <input type="text" name="teamName" value="{{editTeam.teamName}}" placeholder="Team Name"
                                required>
                            <div class="team-btns">
                                <input class="delete-btn btn" type="submit" value="Create Team">
                            </div>
                        </div>
                    </form>
                </div>
    </div>
</div>
{% endblock %}


{% block footer %}

{% endblock %}